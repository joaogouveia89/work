<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Hello Jo√£o</h3>
                <hr />
                <div class="row">
                    <div class="col-6">
                        <blockquote class="blockquote">
                            <p class="pb-2">
                            "<%= @quote.sentence %>"
                            </p>
                        </blockquote>
                        <figcaption class="blockquote-footer mb-0">
                            <%= @quote.author %>
                        </figcaption>
                    </div>
                    <div class="col-6 d-flex justify-content-end">
                        <%= image_tag "avatar.png", width: 150, height: 150 %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br /><br />

<div class="row w-100">
    <div class="col-md-4">
        <div class="card border-primary mx-sm-1 p-4">
            <div class="card border-primary shadow text-primary p-3 my-card" ><span class="fa fa-tasks" aria-hidden="true"></span></div>
            <div class="text-primary text-center mt-3"><h4>Open tasks</h4></div>
            <div class="text-primary text-center mt-2"><h1><%= @number_of_open_tickets %></h1></div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-warning mx-sm-1 p-4">
            <div class="card border-warning shadow text-warning p-3 my-card" ><span class="fa fa-code-pull-request" aria-hidden="true"></span></div>
            <div class="text-warning text-center mt-3"><h4>PRs</h4></div>
            <div class="text-warning text-center mt-2"><h1><%= @number_of_open_prs %></h1></div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success mx-sm-1 p-4">
            <div class="card border-success shadow text-success p-3 my-card"><span class="fa fa-sticky-note" aria-hidden="true"></span></div>
            <div class="text-success text-center mt-3"><h4>Last note</h4></div>
            <div class="text-success text-center mt-2"><h1><%= date_difference_in_words(@last_note.updated_at, @today) %> ago</h1></div>
        </div>
    </div>
</div>
<br /><br />
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Today Journal</h4>
                <hr /><br/>
                <% if @day_journal.empty? %>
                    <h4 class="text-center"> No journal registered yet </h4>
                <% else %>
                    <div class="row w-100">
                        <div class="col-md-3">
                            <div class="card border-<%= get_journal_topic_color  @day_journal.first.meetings %> mx-sm-1 p-3">
                                <div class="card border-<%= get_journal_topic_color  @day_journal.first.meetings %> shadow text-<%= get_journal_topic_color  @day_journal.first.meetings %> p-3 my-card" ><span class="fa-solid fa-handshake" aria-hidden="true"></span></div>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.meetings %> text-center mt-3"><h4>Meetings</h4></div><br/>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.meetings %> text-center mt-2"><h1><i class="<%= get_journal_topic_icon  @day_journal.first.meetings %>"></i></h1></div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-<%= get_journal_topic_color  @day_journal.first.current_task %> mx-sm-1 p-3">
                                <div class="card border-<%= get_journal_topic_color  @day_journal.first.current_task %> shadow text-<%= get_journal_topic_color  @day_journal.first.current_task %> p-3 my-card"><span class="fa-solid fa-bars-progress" aria-hidden="true"></span></div>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.current_task %> text-center mt-3"><h4>Current Task</h4></div><br/>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.current_task %> text-center mt-2"><h1><i class="<%= get_journal_topic_icon  @day_journal.first.current_task %>"></i></h1></div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-<%= get_journal_topic_color  @day_journal.first.team_interaction %> mx-sm-1 p-3">
                                <div class="card border-<%= get_journal_topic_color  @day_journal.first.team_interaction %> shadow text-<%= get_journal_topic_color  @day_journal.first.team_interaction %> p-3 my-card" ><span class="fa-solid fa-users" aria-hidden="true"></span></div>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.team_interaction %> text-center mt-3"><h4>Team Interaction</h4></div><br/>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.team_interaction %> text-center mt-2"><h1><i class="<%= get_journal_topic_icon  @day_journal.first.team_interaction %>"></i></h1></div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-<%= get_journal_topic_color  @day_journal.first.humor %> mx-sm-1 p-3">
                                <div class="card border-<%= get_journal_topic_color  @day_journal.first.humor %> shadow text-<%= get_journal_topic_color  @day_journal.first.humor %> p-3 my-card" ><span class="fa-solid fa-heart" aria-hidden="true"></span></div>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.humor %> text-center mt-3"><h4>Humor</h4></div><br/>
                                <div class="text-<%= get_journal_topic_color  @day_journal.first.humor %> text-center mt-2"><h1><i class="<%= get_journal_topic_icon  @day_journal.first.humor %>"></i></h1></div>
                            </div>
                        </div>
                    </div>
                    <br />
                <% end %>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-12">
        <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="historicTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#sevendays-tab-pane" type="button" role="tab" aria-controls="sevendays-tab-pane" aria-selected="true">7 days</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#thirtydays-tab-pane" type="button" role="tab" aria-controls="thirtydays-tab-pane" aria-selected="false">30 days</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#oneyear-tab-pane" type="button" role="tab" aria-controls="oneyear-tab-pane" aria-selected="false">1 year</button>
                        </li>
                        </ul>
                        <div class="tab-content" id="historicTabContent">
                        <br/>
                        <div class="tab-pane fade show active" id="sevendays-tab-pane" role="tabpanel" aria-labelledby="sevendays-tab" tabindex="0">
                            <%= render 'period_report', data: @time_report["7"] %>
                        </div>
                        <div class="tab-pane fade" id="thirtydays-tab-pane" role="tabpanel" aria-labelledby="thirtydays-tab" tabindex="0">
                            <%= render 'period_report', data: @time_report["30"] %>
                        </div>
                        <div class="tab-pane fade" id="oneyear-tab-pane" role="tabpanel" aria-labelledby="oneyear-tab" tabindex="0">
                            <%= render 'period_report', data: @time_report["365"] %>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
