<% unless notice == nil %>
  <div class="alert alert-primary alert-dismissible fade show" style="margin-top: 16px; margin-bottom: 16px;"role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="d-flex justify-content-center">
<div class="calendar-container d-flex justify-content-center">
  <div class="calendar">

    <header>
      <!-- Month name -->
      <h2><%= @today.strftime("%B").capitalize %></h2>

      <a class="btn-prev fa-solid fa-angle-left" href="#"></a>
      <a class="btn-next fa-solid fa-angle-right" href="#"></a>

    </header>

    <table class="calendar-table">

      <thead>

        <tr>

          <td>Mon</td>
          <td>Tue</td>
          <td>Wed</td>
          <td>Thu</td>
          <td>Fri</td>
          <td>Sat</td>
          <td>Sun</td>

        </tr>

      </thead>

      <tbody>

        <% @month_days.each do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= render 'calendar_day', day: day %>
            <% end %>
          </tr>
        <% end %>

      </tbody>

    </table>

  </div> <!-- end calendar -->

</div> <!-- end container -->
</div>