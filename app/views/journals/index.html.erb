<p id="notice"><%= notice %></p>
<div class="d-flex justify-content-center">
<div class="calendar-container d-flex justify-content-center">
  <div class="calendar">

    <header>
      <!-- Month name -->
      <h2><%= @today.strftime("%B").capitalize %></h2>

      <a class="btn-prev fa-solid fa-angle-left" href="#"></a>
      <a class="btn-next fa-solid fa-angle-right" href="#"></a>

    </header>

    <table class="calendar-table">

      <thead>

        <tr>

          <td>Mo</td>
          <td>Tu</td>
          <td>We</td>
          <td>Th</td>
          <td>Fr</td>
          <td>Sa</td>
          <td>Su</td>

        </tr>

      </thead>

      <tbody>

        <% @month_days.each do |week| %>
          <tr>
            <% week.each do |day| %>
              <%= render 'calendar_day', day: day %>
            <% end %>
          </tr>
        <% end %>

      </tbody>

    </table>

  </div> <!-- end calendar -->

</div> <!-- end container -->
</div>


<table>
  <thead>
    <tr>
      <th>Meetings</th>
      <th>Current task</th>
      <th>Team interaction</th>
      <th>Humor</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @journals.each do |journal| %>
      <tr>
        <td><%= journal.meetings %></td>
        <td><%= journal.current_task %></td>
        <td><%= journal.team_interaction %></td>
        <td><%= journal.humor %></td>
        <td><%= journal.comments %></td>
        <td><%= link_to 'Show', journal %></td>
        <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
        <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

